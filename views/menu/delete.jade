//- Extendemos del layout
extends ../layout.jade
//- Bloqueamos el contenido de layout para que no sea modificable.
block contenido
		div(class="col-md-5 center-block no-float top-space text-left")
			h1 Editar #[span= producto.title]
			//- Definicion del formulario Editar Producto
			form(method="POST" action="/menu/#{producto.id}?_method=delete" style="margin-top:1.5em;" enctype="multipart/form-data")
				div(class="form-group")
					label Contraseña
					input(type="password" name="password" placeholder="Contraseña" class="form-control")
				div(class="form-group text-right")
					input(type="submit" class="btn btn-info" value="Guardar")